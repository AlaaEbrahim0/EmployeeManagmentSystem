@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Roles List";
}

<h1>All Roles</h1>


@if (Model.Any())
{    
    <a asp-action="CreateRole" asp-controller="Adminstration" class="btn btn-secondary mb-3" style="width:auto">Add New Role</a>

    foreach(var role in Model)
    {
        <div class="card mb-3">
		    <div class="card-header">
                Role Id: @role.Id
            </div>

		    <div class="card-body">
			    <h5 class="card-title">
                    @role.Name
                </h5>  
            </div>

			<div class="card-footer">
                <form method="post" asp-action="DeleteRole" asp-controller="adminstration" asp-route-id="@role.Id">
                    <a asp-controller="adminstration" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-danger">Edit</a>


                    <span id="confirmDeleteSpan_@role.Id" style="display:none">

                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a href="#" class="btn btn-primary" onclick="confirmDelete('@role.Id', false)">No</a>
                    </span>

                    <span id="deleteSpan_@role.Id">
                        <a href="#" class="btn btn-danger" onclick="confirmDelete('@role.Id', true)">Delete</a>
                    </span>
                </form>
            </div>

        </div>  
    }
}
else
{
    <div class="card">
		<div class="card-header">
            No Roles Yet
        </div>
		<div class="card-body">
			<h5 class="card-title">
                Use the button below to create a new role
            </h5>
		    <a class="btn btn-primary" style="width:auto" asp-action="CreateRole" asp-controller="Adminstration">Create Role</a>
        </div>
    </div>    
}

@section Scripts{
    <script src="~/js/customscript.js"></script>
}