@model EditRoleViewModel

@{
	ViewBag.Title = "Edit Role";
}

<form method="post" asp-controller="adminstration" asp-action="updateRole" class="mt-3">
	<div asp-validation-summary="All" class="text-danger"></div>


	<div class="form-group row">
		<label asp-for="Id" class="form-label col-md-2">Role ID</label>
		<div class="col-md-10">
			<input asp-for="Id" class="form-control" disabled />
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="RoleName" class="form-label col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="RoleName" class="form-control" />
			<span asp-validation-for="RoleName" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary" asp-action="EditRole" asp-controller="Adminstration">Update</button>
			<a asp-action="RolesList" asp-controller="Adminstration" class="btn btn-secondary">Cancel</a>
		</div>
	</div>	

	<div class="card">
	<div class="card-header">
		Users in this role
	</div>

	<div class="card-body">
			@if (Model.Users.Any())
			{
				foreach (var userName in Model.Users)
				{
						<h5 class="card-title">@userName</h5>
				}
			}
			else
			{
				<h5 class="card-title">None at the moment</h5>
			}
	</div>

	<div class="card-footer">
		<a asp-action="EditUsersInRole" asp-controller="Adminstration" asp-route-roleId ="@Model.Id" class="btn btn-primary" style="width: auto">Add User OR Remove Users</a>
	</div>

</div>
</form>




